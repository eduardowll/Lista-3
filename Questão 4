#include <iostream>
using namespace std;

int main(){
	
	int num, cont, soma = 0;
	
	cout << "Digite um numero inteiro e positivo: ";
	cin >>  num;
	for(cont = 1; cont < num; cont++){
		if(num % cont == 0){
			soma += cont;
		}		
	}
			if(soma == num){
				cout << "Seu numero e perfeito";
			}else{
				cout << "Seu numero nao e perfeito";
			}	
}
